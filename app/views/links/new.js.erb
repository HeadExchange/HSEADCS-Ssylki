$("body").append("<%= j (render partial: 'popuplinkform', link: Link.new) %>")

$(".main").addClass("blur-filter")
$(".blur-wrapper").css("background-color", "#000");
$("body").css("overflow-y", "hidden");
$(".menubar").css("display", "none");
// $("body").css("pointer-events", "none");

$(".popup_link-form .button_back").on("click", function() {
  $(".popup_link-form").remove()
  $(".main").removeClass("blur-filter")
  $(".blur-wrapper").css("background-color", "transparent")
  $(".blur-wrapper").css("position", "inherit");
})

$(".icon_close").on("click", function() {
  $(".popup_link-form").remove()
  $(".main").removeClass("blur-filter")
  $(".blur-wrapper").css("background-color", "transparent")
  $(".blur-wrapper").css("position", "inherit");
})

$(".menu-dropdown_add").remove();
