<section class="section_links-wrapper">

  <section class="section_board-in-links">
    <h1 class=header_board><%= @board.title %></h1>
    <p class=description_board><%= @board.description %></p>
  </section>

  <section class="link__section">

    <div class="link__item">
    <% @links.each do |link| %>

      <%= link_to link.url, target: "_blank", class: "link" do %>

        <div class="link__image">
          <% if link.image.try(:url) %>
            <%= image_tag link.image.url, width: '368px', height: '194px'%>
          <% end %>
        </div>
        <h2 class="link__title"><%= link.title %></h2>
        <div class="link__url"><%= link.url %></div>

      <% end %>

      <div class="link__settings_flex-container">
        <div id="more-btn-link">✏️</div>
        <div class="link__settings">
            <%= link_to 'Изменить', edit_link_path(link) %>
            <%= link_to 'Удалить', link, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </div>
      </div>

  </div>
  <% end %>

  </section>
</section>
