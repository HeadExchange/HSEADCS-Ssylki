<div class="container__menu-privacy menu">
  <div class="menu-privacy__content">

    <div class="menu-privacy__list">

      <li>
        <div class="menu-privacy__icon">
          <%= image_tag "link-smaller.svg", class: "icon icon_privacy icon_published" %>
        </div>
        <div class="menu-privacy__item">Доступ по ссылке</div>
        <div class="menu-privacy__toggle toggle toggle_sharelink">
          <%# if @board.shared == true %>
            <%#= link_to share_board_path(@board) do %>
              <div class="toggle__body">
                <div class="toggle__circle"></div>
              </div>
            <%# end %>
          <%# end %>
        </div>
      </li>

      <li>
        <div class="menu-privacy__icon">
          <%= image_tag "collab2.svg", class: "icon icon_privacy icon_shared" %>
        </div>
        <div class="menu-privacy__item">Совместный доступ</div>
        <div class="menu-privacy__toggle toggle toggle_collab">
          <div class="toggle__body">
            <div class="toggle__circle"></div>
          </div>
        </div>
      </li>

    </div>

    <div class="menu-privacy__buttons">
      <a class="button_add button">Добавить коллаборатора</a>
      <a class="button_copy button">Скопировать ссылку</a>
    </div>

  </div>
</div>
