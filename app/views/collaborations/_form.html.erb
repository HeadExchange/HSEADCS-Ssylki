<div class="popup_collaboration-form">

  <%= form_with(model: [ :board, @collaboration ], remote: true) do |form| %>

    <% if collaboration.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(collaboration.errors.count, "error") %> prohibited this collaboration from being saved:</h2>

        <ul>
        <% collaboration.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

      <div class="field">
        <%= form.email_field :user_email, autofocus: "autofocus", autocomplete: "off", placeholder: "Введите адрес или никнейм коллаборатора...", id: "emailFieldMultiple" %>
      </div>

      <div class="form-collaboration__buttons">
        <div class="actions">
          <%= form.submit value="Добавить", :class => "button_ok button" %>
        </div>
        <a class="button_back button" data-remote="true">Отменить</a>
      </div>

    <% end %>

</div>
