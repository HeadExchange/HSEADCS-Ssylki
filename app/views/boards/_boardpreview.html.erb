<section class="boardSearchPreview">

  <h1 class="section_boardpreview__title"><%= link_to board.title, board_path(board) %></h1>

  <% if board.public %>
    <div class="section__icon_public">
      <%= image_tag "share.svg" %>
    </div>
  <% end %>

  <p class="section_boardpreview__description"><%= board.description %></p>

  <span class="link_number_boardpreview"><%= "(" + board.links.count.to_s + ")" %></span>

</section>
