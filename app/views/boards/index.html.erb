<main class="main">

  <% @boards.each do |board| %>

    <h1 class="board_header">
      <%= link_to board.title, board_links_path(board) %>
    </h1>

    <div class="board_settings">
      <%= image_tag 'settings.svg' %>
      <div class="board_settings_element"><%#= link_to 'Показать', board %></div>
      <div class="board_settings_element"><%= link_to 'Изменить', edit_board_path(board) %></div>
      <div class="board_settings_element"><%= link_to 'Удалить', board, method: :delete, data: { confirm: 'Вы уверены?' } %></div>
    </div>

    <p class="board_description"><%= board.description %></p>

  <% end %>

</main>
